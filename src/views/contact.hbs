</nav>

<div class="container d-flex justify-content-center align-items-center vh-100 mt-3">
        <div class="w-50">
            <form onsubmit="return validateForm()" id="contactForm">
                <h2 style="text-align: center;">GET IN TOUCH</h2>
                <div class="mb-3">
                    <label for="name" class="font-style">Name</label>
                    <input type="text" class="form-control" id="name" required />
                </div>
                <div class="mb-3">  
                    <label for="email" class="font-style">Email</label>
                    <input type="email" class="form-control" id="email" pattern="[a-zA-Z0-9._%+-]+@[a-zA-Z0-9.-]+\.(com|co\.id|net|org)" required />
                    <div id="emailError" class="text-danger"></div>
                </div>
                <div class="mb-3">
                    <label for="phone_number" class="font-style">Phone Number</label>
                    <input type="tel" class="form-control" id="phone_number" pattern="[0-9]+" required />
                    <div id="phoneError" class="text-danger"></div>
                </div>
                <label class="font-style">Subject</label>
                <select class="form-select mb-3" aria-label="Default select example" id="subject" required>
                    <option selected disabled value="">Open this to select subject</option>
                    <option value="1">Frontend Developer</option>
                    <option value="2">Backend Developer</option>
                    <option value="3">Fullstack Developer</option>
                </select>
                <div class="mb-3">
                    <label for="message" class="font-style">Message</label>
                    <textarea class="form-control" id="message" required></textarea>
                </div>
                <div class="text-end">
                    <button type="submit" class="btn btn-dark">Submit</button>
                </div>
            </form>
        </div>
    </div>

    <script src="assets/js/contact.js"></script>
