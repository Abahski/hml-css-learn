    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js" integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+" crossorigin="anonymous"></script>
</head>

<body>
<nav class="navbar navbar-expand-lg bg-body-tertiary px-5">
    <div class="container-fluid">
        <a class="navbar-brand" href="#">
            <img src="assets/image/dumbways.png" alt="Logo" class="navbar-logo" style="width:50px">
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" href="/my-project">Add Project</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/testimoni">Testimonial</a>
                </li>
            </ul>
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="btn btn-dark d-none d-lg-inline" href="/contact">Contact Me</a>
                    <a class="nav-link d-lg-none" href="/contact">Contact Me</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

    <div class="w-50 mx-auto mt-5">
        <form onsubmit="addProject(event)" id="projectForm">
            <h2 style="text-align: center;">Add My Project</h2>
            <div class="mb-3">
                <label for="input-project-name" class="font-label">Project Name</label>
                <input id="input-project-name" required />
            </div>
            <div class="mb-3 row">
                <div class="col-md-6">
                    <label for="input-start-date" class="font-label">Start Date</label>
                    <input type="date" class="form-control" id="input-start-date" required>
                </div>

                <div class="col-md-6">
                    <label for="input-end-date" class="font-label">End Date</label>
                    <input type="date" class="form-control" id="input-end-date" required>
                </div>
            </div>
        
            <div class="mb-3">
                <label for="input-project-description" class="font-label">Description</label>
                <textarea id="input-project-description" required></textarea>
            </div>
            <div class="mb-3">
                <label for="input-checkboxes" class="font-label" style="margin-bottom: 10px;">Technologies</label>
                <div class="checkbox-container">
                    <div class="form-check form-check-inline">
                      <input class="form-check-input" type="checkbox" id="css" value="css">
                      <label class="form-check-label" for="css">CSS</label>
                    </div>
                    <div class="form-check form-check-inline">
                      <input class="form-check-input" type="checkbox" id="html" value="html">
                      <label class="form-check-label" for="html">HTML</label>
                    </div>
                    <div class="form-check form-check-inline">
                      <input class="form-check-input" type="checkbox" id="python" value="python">
                      <label class="form-check-label" for="python">Python</label>
                    </div>
                    <div class="form-check form-check-inline">
                      <input class="form-check-input" type="checkbox" id="nodejs" value="nodejs">
                      <label class="form-check-label" for="nodejs">NodeJS</label>
                    </div>
                </div>
            </div>
            <div class="mb-3">
                  <label for="input-image" class="font-label">Upload Image</label>
                  <input class="form-control" type="file" id="input-image" accept="image/*" required>
            </div>
            <div class="text-end">
                <button type="submit" class="btn btn-dark">Submit</button>
            </div>
        </form>
    </div> 

<div class="container-lg mt-5 ">
    <div id="contents w-100" class="project-list">
        <h1 class="project-title">Project List</h1>
        {{#each data}}
        <div class="project-list-item">
            <div class="project-image">
                <img src="{{this.image}}" alt="" class="img-fluid">
            </div>
            <div class="project-content">
                <h1>
                    <a href="/project-page/{{this.id}}" target="_blank">{{this.title}}</a>
                </h1>
                <div class="detail-project-content">
                    Durasi: 5 Bulan | 1 Januari 20213 22:30 WIB | Reza Liswara
                </div>
                <div class="tech-icon-container">
                    <i class="tech-icon fab fa-node"></i>
                    <i class="tech-icon fab fa-python"></i>
                    <i class="tech-icon fab fa-html5"></i>
                    <i class="tech-icon fab fa-css3-alt"></i>
                </div>
                <p>
                    {{this.content}}
                </p>
                <div class="btn-group position-absolute top-0 end-0 m-3">
                        <button class="btn-edit me-2">Edit</button>
                        <button class="btn-post">Delete</button>
                </div>
                <div> 
                     <p style="width: 100%">Uploaded 2 minutes ago</p>
                </div>  
            </div>
        </div>
        {{/each}}
    </div>
</div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>